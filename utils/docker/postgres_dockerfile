FROM postgres

# Set environment variables
ENV POSTGRES_USER=admin
ENV POSTGRES_PASSWORD=kwiz_password

# Expose the PostgreSQL port
EXPOSE 5432

# Set the default database name
ENV POSTGRES_DB=kwiz_question

# Copy custom initialization script to the container
COPY init.sql /docker-entrypoint-initdb.d/

# The CMD instruction allows you to set a default command that will be executed when the container starts
CMD ["postgres"]
